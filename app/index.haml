    / Button trigger modal
    %button.btn.btn-primary{"data-target" => "#exampleModal", "data-toggle" => "modal", :type => "button"}
      Home Popup
    / Modal
    #exampleModal.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "exampleModalLabel", :role => "dialog", :tabindex => "-1"}
      .modal-dialog{:role => "document"}
        .modal-content
          .modal-body.modal-body--pg 
            %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
              %img{ :src => "assets/img/close.png"}/
            .row
              .col-lg-6.col-md-6.p-0.d-sm-flex.d-none
                .main-modal__boximg
                  .main-modal__img
                    %img{ :src => "assets/img/phone-modal.png"}/
              .col-lg-6.col-md-6.p-0
                .main-modal__form
                  .main-modal__title
                    %h2 Get In Touch
                  %form
                    .form-group
                      %input#formGroupExampleInput.form-control{:placeholder => "First Name*", :type => "text"}/
                    .form-group
                      %input#formGroupExampleInput.form-control{:placeholder => "Last Name*", :type => "text"}
                    .form-group
                      %input#formGroupExampleInput.form-control{:placeholder => "Company", :type => "text"}
                    .form-group
                      %input#formGroupExampleInput2.form-control{:placeholder => "Email*", :type => "text"}/
                    .form-group
                      %input#formGroupExampleInput2.form-control{:placeholder => "Phone*", :type => "phone"}/
                    .form-group
                      %input#formGroupExampleInput2.form-control{:placeholder => "Country*", :type => "text"}/
                    .form-group
                      %textarea{:placeholder => "Comments",:rows => "8"}
                    .main-check__btn
                      %a.btn_custom.btn--large.btn--filled--yellow{ :href => ''} send message
